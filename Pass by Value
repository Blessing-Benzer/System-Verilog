module pass_by_value;
   int x,y,z;
   function int sum(int x,y);
     x = x+y;//x=20
     y = x+y;//y=20  cant see updated value
     return x+y; //((x+y)+y) =130
   endfunction

   initial begin
     x = 20;
     y = 30;
     $display("x = %d\n y = %d\n",x,y);
    z = sum(y,x);
     $display("x = %d\n y = %d\n z = %d\n",x,y,z);
   
   end
 endmodule
